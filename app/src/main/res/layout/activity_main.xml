<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/activity_main_btn_main_thread"
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:text="@string/run_main_thread"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_main_btn_worker_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/run_worker_thread"/>

    <Button
        android:id="@+id/activity_main_btn_async_task"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_async_task"/>

</FrameLayout>
